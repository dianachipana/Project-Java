<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarStyle="outsideInset"
    android:background="#121212"
    android:orientation="vertical"
    tools:context="mx.unac.proyectoipd.MainActivity"
    android:weightSum="1">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="157dp"
        android:layout_height="148dp"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/logo" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Academia IPD"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="25dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="25dp"/>

    <EditText

        android:id="@+id/editText7"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.19"
        android:background="@android:color/background_light"
        android:backgroundTint="@android:color/background_light"
        android:drawableRight="@drawable/ic_person_black_24dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Ingrese usuario"
        android:textColor="#B3B6B7  "
        android:paddingRight="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#E5E7E9 "
        android:gravity="center"
        android:textSize="25dp"/>

    <EditText
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.19"
        android:background="@android:color/background_light"
        android:backgroundTint="@android:color/background_light"
        android:drawableRight="@drawable/ic_https_black_24dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Ingrese password"
        android:textColor="#B3B6B7  "
        android:paddingRight="20dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#E5E7E9"
        android:gravity="center"
        android:textSize="25dp"
        />

    <Button
        android:id="@+id/button"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_gravity="center"
        android:text="Ingresar"
        android:textColor="#FFFFFF"
        android:textSize="25dp" />


</LinearLayout>




